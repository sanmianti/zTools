<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sanmianti.com.ztools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="ZToolsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpenThirdAppActivity"
            android:label="打开第三方应用"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ImmersiveActivity"
            android:label="沉浸式用户体验"
            android:theme="@style/StatusBarTestTheme" />
        <activity
            android:name=".GoogleImmersiveActivity"
            android:theme="@style/ImmersiveTheme" />
        <activity
            android:name=".GoogleImmersiveStickyActivity"
            android:theme="@style/ImmersiveStickyTheme" />
        <activity
            android:name=".ProgressWebviewActivity"
            android:label="loading..."
            android:theme="@style/AppTheme" />
        <activity
            android:name=".keyboard.SoftkeyboardTestActivity"
            android:label="软键盘相关功能测试"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".swiprefresh.SwipRefreshActivity"
            android:label="下拉刷新控件的使用"
            android:theme="@style/AppTheme" />
        <activity android:name=".swiprefresh.PermissionTestActivity"
            android:label="动态权限获取"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>
